#!/bin/python3

import math
import os
import random
import re
import sys

n = int(input())
arr = input()
sum1 = 0
ans=0
for i in arr :
    if i == "D" :
        sum1-=1
       
    if i == "U" :
        sum1+=1
        
    if sum1==0 and i=="U" :
        ans+=1    
print(ans)        
